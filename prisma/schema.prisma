// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Table Admin
model admin {
  id        Int      @id @default(autoincrement())
  username  String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//Table Fasilitas
model fasilitas {
  id     Int     @id @default(autoincrement())
  nama   String
  ada    Boolean @default(false)
  jumlah Int
}

// Table Image
model image {
  id   Int    @id @default(autoincrement())
  nama String
}

// Table kecamatan
model kecamatan {
  id   Int    @id @default(autoincrement())
  nama String
}

// Table hotel
model hotel {
  id          Int    @id @default(autoincrement())
  title       String
  deskripsi   String
  linkmap     String
  alamat      String
  harga_min   BigInt
  harga_max   BigInt
  idImage     Int    @unique
  idFasilitas Int    @unique
  idKecamatan Int    @unique
}

// Table wisata
model wisata {
  id          Int    @id @default(autoincrement())
  title       String
  deskripsi   String
  linkmap     String
  alamat      String
  harga_min   BigInt
  harga_max   BigInt
  idImage     Int    @unique
  idFasilitas Int    @unique
  idKecamatan Int    @unique
}

// Table hotel_has_wisata
model hotel_has_wisata {
  id       Int @id @default(autoincrement())
  idHotel  Int @unique
  idWisata Int @unique
}
